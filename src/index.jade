doctype html
html(lang="ja")
  head
    meta(charset='UTF-8')
    title timeline
    meta(content='IE=edge', http-equiv='X-UA-Compatible')
    meta(content='author', name='author')
    meta(content='description', name='description')
    meta(content='keywords', name='keywords')
    meta(content='width=device-width, initial-scale=1' name='viewport')
    meta(content='telephone=no', name='format-detection')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', media='all')
    link(href='https://fonts.googleapis.com/css?family=Rozha+One' rel='stylesheet' type='text/css')
    // build:css styles/vendor.css
    // bower:css
    // endbower
    // endbuild
    link(rel='stylesheet', href='styles/style.css', media='all')
  body
    #timeline.timeline
      #timelineYears.timeline__years
      #timelineEvents.timeline__events
      #timelineController.timeline__controller.controller
        ul
          - menus = {}
          - menus[1] = {id: 'Plus', class: 'plus'}
          - menus[2] = {id: 'Minus', class: 'minus'}
          each menu, i in menus
            li
              i.controller__icon(id="controller#{menu.id}" class="fa fa-search-#{menu.class}")
    #timelineLightbox.lightbox
      #lightboxClose.lightbox__close

    // build:js scripts/vendor.js
    // bower:js
    script(src='../bower_components/jquery/dist/jquery.js')
    // endbower
    // endbuild

    // build:js scripts/main.js
    script(src='scripts/script.js')
    // endbuild
